{
  "extends": "@repo/typescript-config/browser-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "declarationDir": "./dist/types",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "tests/**/*.ts", "tests/**/*.tsx"]
}
